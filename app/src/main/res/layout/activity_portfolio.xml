<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PortfolioActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/my_title"
        android:id="@+id/myTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp" />

    <Button
        android:text="@string/media_streamer"
        android:id="@+id/spotifyStreamerButton"
        android:layout_below="@+id/myTitle"
        style="@style/ButtonStyles"
        android:onClick="displayMessage" />

    <Button
        android:text="@string/super_duo1"
        android:id="@+id/scoresAppButton"
        android:layout_below="@+id/spotifyStreamerButton"
        style="@style/ButtonStyles"
        android:onClick="displayMessage" />

    <Button
        android:text="@string/super_duo2"
        android:id="@+id/libraryAppButton"
        android:layout_below="@+id/scoresAppButton"
        style="@style/ButtonStyles"
        android:onClick="displayMessage" />

    <Button
        android:text="@string/build_it_bigger"
        android:id="@+id/buildBiggerButton"
        android:layout_below="@+id/libraryAppButton"
        style="@style/ButtonStyles"
        android:onClick="displayMessage" />

    <Button
        android:text="@string/xyz_reader"
        android:id="@+id/xyzReaderButton"
        android:layout_below="@+id/buildBiggerButton"
        style="@style/ButtonStyles"
        android:onClick="displayMessage" />

    <Button
        android:text="@string/capstone"
        android:id="@+id/capstoneButton"
        android:layout_below="@+id/xyzReaderButton"
        style="@style/ButtonStyles"
        android:background="@android:color/holo_red_light"
        android:onClick="displayMessage" />

</RelativeLayout>
